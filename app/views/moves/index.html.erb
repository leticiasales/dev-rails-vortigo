<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between">
  <h2>Moves</h2>
  <div class="my-auto">
    <%= link_to 'New Move', new_move_path, :class => "btn btn-sm btn-primary" %>
  </div>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Action</th>
      <th>Drone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moves.each do |move| %>
      <tr>
        <td><%= move.action %></td>
        <td><%= move.drone.name %></td>
        <td class="d-flex justify-content-end">
          <%= link_to 'Show', move, :class => "btn btn-sm btn-outline-primary mr-2" %>
          <%= link_to 'Edit', edit_move_path(move), :class => "btn btn-sm btn-outline-secondary mr-2" %>
          <%= link_to 'Destroy', move, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
