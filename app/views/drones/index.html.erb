<p id="notice"><%= notice %></p>

<div class="d-flex justify-content-between">
  <h2>Drones</h2>
  <div class="my-auto">
    <%= link_to 'New Drone', new_drone_path, :class => "btn btn-sm btn-primary" %>
  </div>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drones.each do |drone| %>
      <tr>
        <td><%= drone.name %></td>
        <td class="d-flex justify-content-end">
          <%= link_to 'Show', drone, :class => "btn btn-sm btn-outline-primary mr-2" %>
          <%= link_to 'Edit', edit_drone_path(drone), :class => "btn btn-sm btn-outline-secondary mr-2" %>
          <%= link_to 'Destroy', drone, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
